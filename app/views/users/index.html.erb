<div class="m-auto 2xl:w-2/4 lg:3/4 md:w-5/6 md:max-w-xl">
  <% if user_signed_in? %>
    <div class="flex flex-col items-center bg-white rounded-lg border shadow-md md:flex-row md:max-w-xl m-auto my-6">
      <div class="flex flex-col justify-between p-4 leading-normal min-w-full">
        <h2 class="text-2xl font-bold m-auto leading-loose text-left text-grey-700">
          Hello <%= @current_user.name %>!
        </h2>
        <%= render "posts/new", :post => @post %>
      </div>
    </div>
  <% end %>
  <h1 class="text-4xl font-bold m-auto leading-loose pl-1 pt-6 pd-6 text-left text-grey-700">
    all users.
  </h1>
  <div class="container mb-12">
    <%= render partial: "user", collection: @users.order(:id) %>
  </div>
</div>
