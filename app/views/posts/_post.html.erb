<%= link_to user_post_path(@user.id, post.id), class: "flex flex-col  rounded-lg border justify-between p-3 leading-normal min-w-full m-2 hover:bg-gray-100" do %>
  <h2 class="mb-3 font-bold text-gray-700">#<%= post.id %> <%= post.title %></h2>
  <p class="mb-3 font-normal text-gray-700"><%= post.text[0..120]%><%= post.text.length > 121? "..." : ''%></p>
  <p class="mb-3 font-normal text-gray-500 text-xs text-right">
    <span class="flex text-right font-normal text-gray-500 self-end">
      <span class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
        </svg>
        &nbsp;
        <%= post.comments_counter %>
      </span>
      &nbsp; 	&nbsp;
      <span class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
        &nbsp;
        <%= post.likes_counter %>
      </span>
    </span>
  </p>
  <h2 class="mb-3 font-bold text-gray-700"> <%= post.comments.length > 0 ? 'comments.': ''%></h2>
  <%= render partial: "comment", collection: post.comments %>
<%end%>
