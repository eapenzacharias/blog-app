<div class="flex flex-col rounded-lg border justify-between pt-2 pl-2 pr-2 leading-normal min-w-full mt-1 md-1">
  <p class="mb-3 font-normal text-sm text-gray-700">
    <span><%= comment.author.name %>: </span>
    <span><%= comment.text %> </span>
    <% if can? :destroy, comment%>
      <%= button_to "Delete", user_post_comment_path(comment.author_id, comment.post_id, comment.id), method: :delete, class: "bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white px-4 border border-red-500 hover:border-transparent rounded text-xs" %>
    <% end %>
  </p>
</div>
