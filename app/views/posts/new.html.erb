<div class="m-auto 2xl:w-2/4 lg:3/4 md:w-5/6 md:max-w-xl">
  <h1 class="mb-2 text-3xl font-bold tracking-tight text-gray-900 m-auto text-center pb-10">create new post.</h1>
  <div class="w-full max-w-xs m-auto">
    <%= form_with model: @post, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4", url: user_posts_path, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :title, "title.", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "hello world!", required: true %>
      </div>
      <div class="mb-3">
        <%= form.label :text, "message.", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :text, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "what's on your mind?", required: true %>
      </div>
      <%= form.submit "post", class: "rounded-lg bg-gradient-to-r from-cyan-500 to-blue-500 p-2 pr-6 pl-6 text-slate-50" %>
    <% end %>
  </div>
</div>
