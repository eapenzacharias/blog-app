<div class="m-auto w-full max-w-sm my-8">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-bold m-auto leading-loose text-left text-grey-700 py-4">forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {"data-turbo": "false", method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "your email id" %>
      </div>
      <div class="actions">
        <%= f.submit "send me reset password mail", class: "rounded-lg bg-gradient-to-r from-cyan-500 to-blue-500 p-2 px-6 my-6 text-slate-50" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
