<div class="m-auto w-full max-w-sm my-8">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-bold m-auto leading-loose text-left text-grey-700 py-4">log in.</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "your email id"  %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "your password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="flex md:items-center">
          <label class="block text-gray-500 font-bold">
            <%= f.check_box :remember_me, class: "mr-2 leading-tight flex-3" %>
            <span class="text-md">remember me.</span>
          </label>
        </div>
      <% end %>
      <div class="flex items-center justify-between">
        <%= f.submit "Log in", class: "rounded-lg bg-gradient-to-r from-cyan-500 to-blue-500 p-2 px-6 my-6 w-40 text-slate-50" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
